<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Notification\Domain\Aggregate\PhoneNumber" table="notification_phone_number">
        <id name="id" type="uuid">
            <generator strategy="NONE"/>
        </id>
        <field name="phone" length="17"/>
        <many-to-many field="subscriptions" mapped-by="phoneNumbers"
                      target-entity="App\Notification\Domain\Aggregate\Subscription">
        </many-to-many>
        <unique-constraints>
            <unique-constraint fields="phone"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
