<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Notification\Domain\Aggregate\Subscription" table="notification_subscription">
        <id name="id" type="uuid">
            <generator strategy="NONE"/>
        </id>
        <field name="subscriberId" length="36"/>
        <many-to-many field="channels" target-entity="App\Notification\Domain\Aggregate\Channel">
            <join-table name="notification_subscription_channel">
                <join-columns>
                    <join-column name="subscription_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>
        <many-to-many field="phoneNumbers" target-entity="App\Notification\Domain\Aggregate\PhoneNumber">
            <join-table name="notification_subscription_phone_number">
                <join-columns>
                    <join-column name="subscription_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="phone_number_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>
        <field name="subscriptionEvents" column="events" type="event_type_collection">
            <options>
                <option name="default">[]</option>
            </options>
        </field>
        <field name="createdAt" type="datetimetz_immutable"/>
        <indexes>
            <index name="subscription_subscriber_idx" columns="subscriber_id"/>
            <index name="subscription_events_idx" columns="events"/>
        </indexes>
    </entity>
</doctrine-mapping>
